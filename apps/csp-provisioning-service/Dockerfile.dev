FROM golang:1.21-alpine

WORKDIR /app

# Install air for hot reloading
RUN go install github.com/cosmtrek/air@v1.49.0

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8081

# Run with air for hot reloading
CMD ["air", "-c", ".air.toml"]
